<?xml version="1.0" encoding="UTF-8" ?>
<?xaml-comp compile="true" ?>
<ResourceDictionary 
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    <!-- ============================================
         Global Styles
         ============================================ -->

    <!-- Page Style -->
    <Style TargetType="ContentPage" ApplyToDerivedTypes="True">
        <Setter Property="BackgroundColor" Value="{StaticResource BackgroundPrimary}" />
    </Style>

    <Style TargetType="Shell" ApplyToDerivedTypes="True">
        <Setter Property="Shell.BackgroundColor" Value="{StaticResource Slate700}" />
        <Setter Property="Shell.ForegroundColor" Value="{StaticResource TextInverse}" />
        <Setter Property="Shell.TitleColor" Value="{StaticResource TextInverse}" />
        <Setter Property="Shell.TabBarBackgroundColor" Value="{StaticResource Slate700}" />
        <Setter Property="Shell.TabBarForegroundColor" Value="{StaticResource TextInverse}" />
        <Setter Property="Shell.TabBarUnselectedColor" Value="{StaticResource Slate400}" />
    </Style>

    <!-- ============================================
         Typography Styles
         Font: Inter (system-ui fallback)
         ============================================ -->

    <!-- Headings -->
    <Style x:Key="HeadingLarge" TargetType="Label">
        <Setter Property="FontFamily" Value="InterBold" />
        <Setter Property="FontSize" Value="24" />
        <Setter Property="TextColor" Value="{StaticResource TextPrimary}" />
    </Style>

    <Style x:Key="HeadingMedium" TargetType="Label">
        <Setter Property="FontFamily" Value="InterSemiBold" />
        <Setter Property="FontSize" Value="20" />
        <Setter Property="TextColor" Value="{StaticResource TextPrimary}" />
    </Style>

    <Style x:Key="HeadingSmall" TargetType="Label">
        <Setter Property="FontFamily" Value="InterSemiBold" />
        <Setter Property="FontSize" Value="18" />
        <Setter Property="TextColor" Value="{StaticResource TextPrimary}" />
    </Style>

    <!-- Body Text -->
    <Style x:Key="BodyLarge" TargetType="Label">
        <Setter Property="FontFamily" Value="InterRegular" />
        <Setter Property="FontSize" Value="16" />
        <Setter Property="TextColor" Value="{StaticResource TextPrimary}" />
    </Style>

    <Style x:Key="BodyMedium" TargetType="Label">
        <Setter Property="FontFamily" Value="InterRegular" />
        <Setter Property="FontSize" Value="14" />
        <Setter Property="TextColor" Value="{StaticResource TextPrimary}" />
    </Style>

    <Style x:Key="BodySmall" TargetType="Label">
        <Setter Property="FontFamily" Value="InterRegular" />
        <Setter Property="FontSize" Value="12" />
        <Setter Property="TextColor" Value="{StaticResource TextSecondary}" />
    </Style>

    <!-- Caption -->
    <Style x:Key="Caption" TargetType="Label">
        <Setter Property="FontFamily" Value="InterMedium" />
        <Setter Property="FontSize" Value="12" />
        <Setter Property="TextColor" Value="{StaticResource TextTertiary}" />
    </Style>

    <!-- ============================================
         Button Styles
         ============================================ -->

    <!-- Primary Button -->
    <Style x:Key="PrimaryButton" TargetType="Button">
        <Setter Property="BackgroundColor" Value="{StaticResource Primary600}" />
        <Setter Property="TextColor" Value="{StaticResource TextInverse}" />
        <Setter Property="FontFamily" Value="InterSemiBold" />
        <Setter Property="FontSize" Value="16" />
        <Setter Property="CornerRadius" Value="8" />
        <Setter Property="Padding" Value="20,14" />
        <Setter Property="MinimumHeightRequest" Value="44" />
        <Setter Property="VisualStateManager.VisualStateGroups">
            <VisualStateGroupList>
                <VisualStateGroup x:Name="CommonStates">
                    <VisualState x:Name="Normal" />
                    <VisualState x:Name="Disabled">
                        <VisualState.Setters>
                            <Setter Property="Opacity" Value="0.5" />
                        </VisualState.Setters>
                    </VisualState>
                    <VisualState x:Name="Pressed">
                        <VisualState.Setters>
                            <Setter Property="BackgroundColor" Value="{StaticResource Primary800}" />
                        </VisualState.Setters>
                    </VisualState>
                </VisualStateGroup>
            </VisualStateGroupList>
        </Setter>
    </Style>

    <!-- Secondary Button -->
    <Style x:Key="SecondaryButton" TargetType="Button">
        <Setter Property="BackgroundColor" Value="{StaticResource Slate700}" />
        <Setter Property="TextColor" Value="{StaticResource TextInverse}" />
        <Setter Property="FontFamily" Value="InterSemiBold" />
        <Setter Property="FontSize" Value="16" />
        <Setter Property="CornerRadius" Value="8" />
        <Setter Property="Padding" Value="20,14" />
        <Setter Property="MinimumHeightRequest" Value="44" />
    </Style>

    <!-- Outline Button -->
    <Style x:Key="OutlineButton" TargetType="Button">
        <Setter Property="BackgroundColor" Value="Transparent" />
        <Setter Property="TextColor" Value="{StaticResource Primary600}" />
        <Setter Property="BorderColor" Value="{StaticResource Primary600}" />
        <Setter Property="BorderWidth" Value="2" />
        <Setter Property="FontFamily" Value="InterSemiBold" />
        <Setter Property="FontSize" Value="16" />
        <Setter Property="CornerRadius" Value="8" />
        <Setter Property="Padding" Value="20,14" />
        <Setter Property="MinimumHeightRequest" Value="44" />
    </Style>

    <!-- Ghost Button -->
    <Style x:Key="GhostButton" TargetType="Button">
        <Setter Property="BackgroundColor" Value="Transparent" />
        <Setter Property="TextColor" Value="{StaticResource Slate700}" />
        <Setter Property="FontFamily" Value="InterSemiBold" />
        <Setter Property="FontSize" Value="16" />
        <Setter Property="CornerRadius" Value="8" />
        <Setter Property="Padding" Value="20,14" />
        <Setter Property="MinimumHeightRequest" Value="44" />
    </Style>

    <!-- Danger Button -->
    <Style x:Key="DangerButton" TargetType="Button">
        <Setter Property="BackgroundColor" Value="{StaticResource Error}" />
        <Setter Property="TextColor" Value="{StaticResource TextInverse}" />
        <Setter Property="FontFamily" Value="InterSemiBold" />
        <Setter Property="FontSize" Value="16" />
        <Setter Property="CornerRadius" Value="8" />
        <Setter Property="Padding" Value="20,14" />
        <Setter Property="MinimumHeightRequest" Value="44" />
    </Style>

    <!-- Success Button -->
    <Style x:Key="SuccessButton" TargetType="Button">
        <Setter Property="BackgroundColor" Value="{StaticResource Success}" />
        <Setter Property="TextColor" Value="{StaticResource TextInverse}" />
        <Setter Property="FontFamily" Value="InterSemiBold" />
        <Setter Property="FontSize" Value="16" />
        <Setter Property="CornerRadius" Value="8" />
        <Setter Property="Padding" Value="20,14" />
        <Setter Property="MinimumHeightRequest" Value="44" />
    </Style>

    <!-- Microsoft Button -->
    <Style x:Key="MicrosoftButton" TargetType="Button">
        <Setter Property="BackgroundColor" Value="{StaticResource BackgroundPrimary}" />
        <Setter Property="TextColor" Value="{StaticResource Slate700}" />
        <Setter Property="BorderColor" Value="{StaticResource BorderMedium}" />
        <Setter Property="BorderWidth" Value="1" />
        <Setter Property="FontFamily" Value="InterSemiBold" />
        <Setter Property="FontSize" Value="16" />
        <Setter Property="CornerRadius" Value="8" />
        <Setter Property="Padding" Value="20,14" />
        <Setter Property="MinimumHeightRequest" Value="44" />
    </Style>

    <!-- ============================================
         Entry Styles
         ============================================ -->

    <Style x:Key="StandardEntry" TargetType="Entry">
        <Setter Property="BackgroundColor" Value="{StaticResource BackgroundPrimary}" />
        <Setter Property="TextColor" Value="{StaticResource TextPrimary}" />
        <Setter Property="PlaceholderColor" Value="{StaticResource TextTertiary}" />
        <Setter Property="FontFamily" Value="InterRegular" />
        <Setter Property="FontSize" Value="16" />
        <Setter Property="MinimumHeightRequest" Value="44" />
    </Style>

    <!-- ============================================
         Card Styles
         ============================================ -->

    <Style x:Key="Card" TargetType="Frame">
        <Setter Property="BackgroundColor" Value="{StaticResource BackgroundPrimary}" />
        <Setter Property="BorderColor" Value="{StaticResource BorderLight}" />
        <Setter Property="CornerRadius" Value="12" />
        <Setter Property="Padding" Value="16" />
        <Setter Property="HasShadow" Value="True" />
    </Style>

    <Style x:Key="CardElevated" TargetType="Border">
        <Setter Property="BackgroundColor" Value="{StaticResource BackgroundPrimary}" />
        <Setter Property="Stroke" Value="{StaticResource BorderLight}" />
        <Setter Property="StrokeThickness" Value="1" />
        <Setter Property="StrokeShape" Value="RoundRectangle 12" />
        <Setter Property="Padding" Value="16" />
        <Setter Property="Shadow">
            <Setter.Value>
                <Shadow Brush="{StaticResource Slate900}" Offset="0,2" Radius="8" Opacity="0.1" />
            </Setter.Value>
        </Setter>
    </Style>

    <!-- ============================================
         Badge Styles
         ============================================ -->

    <Style x:Key="BadgeBase" TargetType="Border">
        <Setter Property="StrokeThickness" Value="0" />
        <Setter Property="StrokeShape" Value="RoundRectangle 4" />
        <Setter Property="Padding" Value="8,4" />
        <Setter Property="HorizontalOptions" Value="Start" />
    </Style>

</ResourceDictionary>
